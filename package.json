{
  "name": "diablo-rpg",
  "version": "1.0.0",
  "description": "Diablo-like RPG game with HTML and Node.js",
  "main": "dist/server/server.js",
  "scripts": {
    "start": "node dist/server/server.js",
    "dev": "nodemon dist/server/server.js",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc",
    "build:client": "webpack",
    "watch": "concurrently \"npm run watch:server\" \"npm run watch:client\"",
    "watch:server": "tsc --watch",
    "watch:client": "webpack --watch",
    "dev:start": "concurrently \"npm run watch\" \"nodemon dist/server/server.js\"",
    "clean": "rimraf dist public/js/*.js public/js/*.map"
  },
  "dependencies": {
    "@types/axios": "^0.9.36",
    "@types/socket.io-client": "^3.0.0",
    "@types/three": "^0.152.1",
    "axios": "^1.8.1",
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.8.1",
    "three": "^0.152.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.8",
    "concurrently": "^7.6.0",
    "nodemon": "^3.1.9",
    "rimraf": "^6.0.1",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^5.1.4"
  }
}
